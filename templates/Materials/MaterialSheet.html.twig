{% extends 'base.html.twig' %}

{# {% block title %}
	{{ title }}
{% endblock %} #}

{% block body %}

	<div class="row justify-content-md-center">

		<div class="card bg-light m-3" style="max-width: 18rem;">
			<div class="card-body">
				<h4 class="card-title"><strong>{{ material.name }}</strong></h4>
				<span>
					<em>Type :
					</em>
				</span>
				<p class="card-text">{{ material.type }}</p>
				<span>
					<em>Fournisseur :
					</em>
				</span>
				<p class="card-text">{{ material.factory.name }}</p>
			</div>
		</div>

		<table class="table table-hover" style="max-width: 20rem;">
			<thead>
				<tr class="table dark">
					<th scope="col">Meubles</th>

				</tr>
			</thead>
			{% for f in material.furnitures %}
				<tbody>
					<tr class="table-light">
						<th scope="row">
							<a href="{{ path('furniture_sheet', { 'id' : f.id }) }}">
								{{ f.name }}
							</a>
							<span>{{ f.type }}</span>
						</th>
					</tr>
				</tbody>
			{% endfor %}
		</table>
	</div>

</div>{% endblock %}
